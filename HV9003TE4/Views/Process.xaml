<Window x:Class="HV9003TE4.Views.Process"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HV9003TE4.Views"
        xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
        Title="Process" Height="100" Width="300"
        Background="Azure"
        WindowStyle="None"
        FontFamily="Swis721 BT" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="219"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBlock Name="ProKind" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="15">降压进度</TextBlock>
        <StackPanel Grid.Column="1" Margin="5,2" VerticalAlignment="Center">
            <ProgressBar x:Name="LaunchProgressBar" Height="25"  Background="Wheat" Foreground="Green"  BorderBrush="#FF3E3E42">
            </ProgressBar>
            <TextBlock x:Name="IsMessage" HorizontalAlignment="Center" Margin="5,-16,5,5"></TextBlock>
        </StackPanel>
    </Grid>
</Window>
